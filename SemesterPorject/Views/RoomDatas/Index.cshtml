@model IEnumerable<SemesterPorject.Models.RoomData>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Inventory of Chambers</h1>

<p>
    <a asp-action="Create">Add New Room</a>
</p>

<div class="row">
@foreach (var item in Model) {
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Location)</h5>
                <p class="card-text">
                    Length: @Html.DisplayFor(modelItem => item.Length) meter<br>
                    Breadth: @Html.DisplayFor(modelItem => item.breadth) meter<br>
                    Height: @Html.DisplayFor(modelItem => item.height) meter<br>
                    Color: @Html.DisplayFor(modelItem => item.color) <br>
                    Water Facility: @Html.Raw(item.waterFacility? "Availiable" : "Not Availiable" )
                </p>
                <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
}
</div>

